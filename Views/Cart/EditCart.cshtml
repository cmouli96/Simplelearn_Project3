@model e_commerce.Models.TblOrder

@{
    ViewData["Title"] = "EditCart";
}

<h1>EditCart</h1>

<h4>TblOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Uname" />
            <input type="hidden" asp-for="Pid" />
            <div class="form-group">
                <label asp-for="Pname" class="control-label"></label>
                <input class="disabled" asp-for="Pname"  />
                <span asp-validation-for="Pname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sname" class="control-label"></label>
                <input class="disabled"  asp-for="Sname" />
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <a asp-action="EditCart" > Update Cart Item</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
